<h2 class="card-title">This is your homepage</h2>
<button type="submit" class="btn"><a class="link" href="/dashboard/new">Add New Post</a></button>

<article class="post">
    {{#each posts}}
    <div class="bg-white border mt-2" style="width: 75%; max-height: 300px">
    <div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">                                   
        <p class="card-text">{{this.content}}</p>
        <a href='/post/{{this.id}}' class={{this.content}}>
            <img style="max-height: 200px" src='{{this.image}}' alt='{{this.content}}' />
            <div class='caption'>
                <h3> <i class='fa fa-heart'></i><span> {{likes.length}}</span></h3>
                <h3> <i class='fa fa-comment'></i><span> {{comments.length}}</span></h3>
            </div>
        </a>
        <h4 class="card-subtitle mb-2 text-muted col-3">posted by {{user.username}} on {{formatDate created_at}}</h4>
    </div>
    </div>
    {{/each}}


    
</article>