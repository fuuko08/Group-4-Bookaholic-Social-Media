        <a class="nav-item nav-link" href="/login"><span class='icon'><i class='fa fa-user'></i></span>Login</a>
        <a class="nav-item nav-link" href="/signup"><span class='icon'><i class='fa fa-plus'></i></span>Signup</a>
            {{/if}}
      </div>
    </div>
