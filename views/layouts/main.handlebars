</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light bg-custom" style="background-color: white;">
    <a class="navbar-brand" href="#">
      <img src="./assets/bookstack2.png" width="32" height="32" class="d-inline-block align-top my-color" alt="Stack of Books">
      Bookaholics
    </a>
		
    <button class="navbar-toggler" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse">
      <div class="navbar-nav ml-auto">
        <a class="nav-item nav-link" href="/">Home</a>
        <a class="nav-item nav-link" href="/userpage">Profile</a>
            {{#if loggedIn}}
        <a class="nav-item nav-link" href="/logout">Sign Out</a>
        <a class="nav-item nav-link modal-trigger upload"><i class="fa fa-plus"></i>Add Post</a>
            {{else}}
        <a class="nav-item nav-link" href="/login">Login</a>
        <a class="nav-item nav-link" href="/login">Signup</a>
            {{/if}}
      </div>
    </div>
    </nav>

    <!-- Header -->
    <header class="hero">
        <h1 class="app-title"><a href="/">Welcome to Bookaholic</a></h1>
   </header>
   
    <!-- Body -->
    <main>
    {{{body}}}
    </main>

