<div class="comment-container bg-white border mt-2" id="{{id}}">
    <div class="d-flex flex-row justify-content-space-between align-items-center hidden-modile">

    <div class="level-left">
        <a href="/userpage/{{user.id}}" class="card-header-title username level-left" userId="{{user.id}}">        
        {{user.username}}
        </a>
    </div>

    <div class='level-right'>
      <h2 class='card-header-title level-right'>
        <div class='modal-trigger actions' userId='{{user.id}}'>
          <span>
            <i class='fas fa-ellipsis-h' aria-hidden='true'></i>
          </span>
        </div>
      </h2>
    </div>
  </div>

    {{#each comments}}
     <div class="is-flex mb-4" style="max-height: 100px">
        <p> 
            <a href="/{{user.id}}" class="">{{user.username}}</a>
            {{comment.comment}}
        </p>   
     </div>

        {{#if signedIn}}
            <button class="btn btn-secondary" id="del-comment-btn">Delete Comment</button>       
        {{/if}}
    {{/each}} 

    <div class="level-left">
        <span class="card-header-title level-item" aria-label="heart emoji">
            {{#if like}}
            <strong>
                <i class="fas fa-heart"></i>
                <span data-value={{likes.length}}>{{likes.length}} likes</span>
            </strong>
            {{/if}}
        </span>
    </div>

    <form class="comment-form p-3">
        <div class="control">
            <textarea class="form-input" placeholder="Write your comment" id="comment-text"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" id="commentBtn" value="{{id}}">Submit Comment</button>
    </form>

    </div>             
</div>
<script src="/js/comment.js"></script>