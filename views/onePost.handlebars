<div class="bg-white border mt-2">
    <div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">    
        <div class="d-flex flex-column flex-wrap ml-2"><span class="font-weight-bold">{{user.username}}</span></div>
        
        <a class="dropdown" id="post-dropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="./images/menu.png" width="18">
        </a>   

        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" href="/editpost">Delete Post</a>
            <a class="dropdown-item" href="/editpost">Edit Post</a>
        </div>  

        <h2><a href="/post/{{post.id}}"></a></h2>    
    
        <div class="col-3">posted by {{post.user.username}} on {{formatDate created_at}}</div>
    </div>
    
    <div class="card-body">
        <p>{{post.content}}</p>
        <div class="column">    
            {{> imageCard }}
        </div>
        <div class="column">
            {{> commentCard}}
        </div>
    </div>
</div> 

<script src="/js/comment.js"></script>
<script src="/js/likepost.js"></script>
<script src="/js/uploadmodal.js"></script>