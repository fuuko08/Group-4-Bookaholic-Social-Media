<!-- Page content -->
  <section class="h-100 gradient-custom-2">
    <div class="container mt-4 mb-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-8">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: whitesmoke; height:120px;">
            <div class="ms-4 d-flex flex-column" style="width: 150px; margin-left: 18px; margin-top: 18px;">
              <br>
              <br>
            </div>
            <div class="ms-3 text-dark" style="margin-top: 77px; margin-left: 17px">
              <h4>{{user.username}}</h4>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: white; height:95px;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5">{{numOfPosts}}</p>
                <p class="small text-muted mb-0">Posts</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5">{{totalNumOfLikes}}</p>
                <p class="small text-muted mb-0">Likes</p>
              </div>
            </div>
          </div>
        </div>
        <br>
        <!-- Create a post button -->
        <div class="feed p-2">
          <button type="button" id="createBtn" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalLong">
            Create a Post
          </button>
          <!-- Create a post modal -->
        {{>postModal}}
        <!-- all posts-->
        {{>allPosts}}
